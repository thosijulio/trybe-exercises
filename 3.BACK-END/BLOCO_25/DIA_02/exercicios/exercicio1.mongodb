db.clientes.aggregate([
  {
    $addFields: {
      idade: {
        $floor: {
          $divide: [
            {
              $subtract: [
                new Date(),
                "$dataNascimento",
              ],
            },
            {
              $multiply: [
                86400000,
                365,
              ],
            },
          ],
        },
      },
    },
  },
]);
